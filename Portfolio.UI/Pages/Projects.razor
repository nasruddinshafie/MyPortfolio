@page "/projects"
@using Portfolio.UI.Services
@using Portfolio.UI.DTOs
@inject IProjectService ProjectService
@inject NavigationManager NavigationManager

<PageTitle>Projects</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4"><i class="fas fa-laptop-code"></i> Projects</h1>
            <p class="lead">Showcase of my work and portfolio projects</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading projects...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <h4>Error Loading Projects</h4>
            <p>@errorMessage</p>
            <button class="btn btn-outline-danger" @onclick="LoadProjects">Try Again</button>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-12">
                <a href="/projects/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Project
                </a>
            </div>
        </div>

        @if (projects == null || !projects.Any())
        {
            <div class="alert alert-info">
                <h4>No Projects Yet</h4>
                <p>Start by creating your first project to showcase your work!</p>
                <a href="/projects/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create Your First Project
                </a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var project in projects)
                {
                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(project.ImageUrl))
                            {
                                <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-code fa-3x text-white"></i>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">
                                    @project.Title
                                    @if (!project.IsActive)
                                    {
                                        <span class="badge bg-secondary ms-2">Inactive</span>
                                    }
                                </h5>
                                <p class="card-text">@project.Description</p>

                                @if (project.Technologies.Any())
                                {
                                    <div class="mb-3">
                                        @foreach (var tech in project.Technologies)
                                        {
                                            <span class="badge bg-info me-1">@tech</span>
                                        }
                                    </div>
                                }

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @if (!string.IsNullOrEmpty(project.ProjectUrl))
                                        {
                                            <a href="@project.ProjectUrl" target="_blank" class="btn btn-sm btn-outline-primary" title="View Project">
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                        }
                                        @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                        {
                                            <a href="@project.GitHubUrl" target="_blank" class="btn btn-sm btn-outline-dark" title="View on GitHub">
                                                <i class="fab fa-github"></i>
                                            </a>
                                        }
                                    </div>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditProject(project.Id)" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(project)" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>

                                @if (project.StartDate.HasValue)
                                {
                                    <small class="text-muted d-block mt-2">
                                        Started: @project.StartDate.Value.ToString("MMM yyyy")
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@if (showDeleteConfirm)
{
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@projectToDelete?.Title</strong>?</p>
                    <p class="text-danger">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteProject">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ProjectDto>? projects;
    private bool isLoading = true;
    private string? errorMessage;
    private bool showDeleteConfirm = false;
    private ProjectDto? projectToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            var result = await ProjectService.GetAllProjectsAsync();
            projects = result.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load projects: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EditProject(int id)
    {
        NavigationManager.NavigateTo($"/projects/edit/{id}");
    }

    private void ConfirmDelete(ProjectDto project)
    {
        projectToDelete = project;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        projectToDelete = null;
        showDeleteConfirm = false;
    }

    private async Task DeleteProject()
    {
        if (projectToDelete != null)
        {
            try
            {
                await ProjectService.DeleteProjectAsync(projectToDelete.Id);
                showDeleteConfirm = false;
                projectToDelete = null;
                await LoadProjects();
            }
            catch (Exception ex)
            {
                errorMessage = $"Failed to delete project: {ex.Message}";
                showDeleteConfirm = false;
            }
        }
    }
}
